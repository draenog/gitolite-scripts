#!/bin/sh


. $(dirname $0)/adc.common-functions
PROG=$(basename $0)

pkg=$1
[ $# -eq 1 -a -n "$pkg" ] || die 'Usage: ssh git@git.pld-linux.org rw <package>'

gitolitedown=$GL_REPO_BASE_ABS/packages/"${pkg}.git"/.gitolite.down
[ -f "$gitolitedown" ] || die "$pkg has been already RW"
rm $gitolitedown

mailinglist=$(git config hooks.mailinglist)
if [ -n "$mailinglist" ]; then
    /usr/sbin/sendmail -t <<EOF
From: $GL_USER@pld-linux.org
To: $mailinglist
Subject: [$PROG command] packages/$pkg
Reply-To: $(git config hooks.replyto)

EOF
fi
